                <td>{{ tagNews.idNews }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tagnews_show', { 'id': tagNews.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tagnews_edit', { 'id': tagNews.id }) }}">edit</a>
