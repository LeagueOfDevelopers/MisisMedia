            <tr>
                <th>Id</th>
                <th>Idtag</th>
                <th>Idnews</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tagNews in tagNews %}
            <tr>
                <td><a href="{{ path('tagnews_show', { 'id': tagNews.id }) }}">{{ tagNews.id }}</a></td>
